{{#if error}}
<div class="alert alert-dismissible alert-danger mt-4">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        {{error}}
    </div>
{{/if}}

{{#each errors}}
    <div class="alert alert-dismissible alert-danger mt-4">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        {{text}}
    </div>
{{/each}}