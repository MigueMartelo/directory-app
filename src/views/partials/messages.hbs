{{#if success_msg}}
    <div class="alert alert-dismissible alert-success mt-4">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        {{success_msg}}
    </div>
{{/if}}

{{#if error_msg}}
    <div class="alert alert-dismissible alert-danger mt-4">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        {{error_msg}}
    </div>
{{/if}}